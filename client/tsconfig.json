{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@config": ["./config/index"],
      "@components": ["src/shared/components/index"],
      "@widgets": ["src/widgets/index"],
      "@pages": ["./src/pages/index"],
      "@utils": ["./src/shared/utils/index"],
      "@hooks": ["src/shared/hooks/index"],
      "@store": ["src/app/store/store"],
      "@features": ["src/features/index"],
      "@icons": ["src/shared/icons/index"]
    },
    "module": "ES2020",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
